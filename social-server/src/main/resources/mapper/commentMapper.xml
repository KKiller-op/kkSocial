<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper .//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kk.dao.CommentsDao">
    <resultMap id="getByIdComment" type="com.kk.bean.Comments">
        <id property="id" column="comment_id"/>
        <result property="new_id" column="new_id"/>
        <result property="content_text" column="content"/>
        <result property="create_date" column="create_date" />
        <result property="like" column="like"/>
        <collection property="user" column="content_id" select="com.kk.dao.UserDao.getUserId"></collection>
    </resultMap>
    <select id="getByIdComment" resultMap="getByIdComment">
        SELECT
	    <include refid="comment_table"></include>
FROM
	`tb_comments`
WHERE
	`new_id` = #{id} order by
	<if test="flag">`like` desc</if>
	<if test="!flag">create_date desc</if>
    </select>
    <insert id="addComment">
        insert into `tb_comments`(`new_id`,`content`,`content_id`)values(#{new_id},#{content_text},#{id})
    </insert>
    <update id="updateLike" parameterType="com.kk.bean.Status">
        update `tb_comments`
         <set>
            <if test="flag">`like` = `like` + 1</if>
            <if test="!flag">`like` = `like` - 1</if>
         </set>
         where `comment_id` = #{id}
    </update>
    <sql id="comment_table">
        `comment_id`,
	`new_id`,
	`content`,
	content_id,
	`create_date`,
	`like`
    </sql>
</mapper>